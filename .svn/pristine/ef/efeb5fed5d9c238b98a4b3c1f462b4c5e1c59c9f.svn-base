body {
  background-color: blanchedalmond;
  background: url('/img/bg.jpg');
  background-size: cover;
  background-attachment: fixed;
}

.App {
  text-align: center;
}

main {
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evenly;
}
.App-header {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-around;
  font-size: calc(10px + 2vmin);
  color: black;
  /* border-bottom: 2px solid orange; */
}
.white-bg {
  background: white;
  padding: 10px;
  margin: 15px 10px;
  border-radius: 10px;
}
.dark-bg {
  background: rgb(77, 37, 24);
  color: blanchedAlmond;
  padding: 10px;
  margin: 10px;
  border-radius: 10px;
}
h1 {
  margin: 10px;
  padding-top: 10px;
}
.italic {
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-style: italic;
}
.search-label {
  position: absolute;
  left: -9999px;
}
.search-button {
  background: none;
  border: none;
}
.search-field {
  border: none;
  border-bottom: 2px solid gray;
  background-color: white;
  width: 300px;
  height: 20px;
  border-radius: 0;
}
.red-line {
  border: 2px solid red;
  background-color: red;
  width: 100%;
  margin-top: 20px;
}
.orange-line {
  border: 2px solid orange;
  background-color: orange;
  width: 60%;
  margin: 0;
  margin-bottom: 20px;
}
li {
  display: inline;
  padding: 0 10px;
}
a {
  color: black;
  text-decoration: none;
}
a:visited {
  color: black;
  text-decoration: none;
}
a:hover {
  color: red;
  text-decoration: none;
}

.content {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evenly;
}
.thumbnail {
  width: 350px;
  padding: 10px;
  text-align: left;
}
.thumbnail-tab {
  display: inline-block;
  max-width: 70%;
  text-align: left;
  background: white;
  border-radius: 10px 10px 0 0; 
  margin: 0;
  padding: 10px 10px 0 10px;
}
.thumbnail-content {
  background: white;
  margin: 0;
  text-align: left;
  padding: 10px;
  border-radius: 0 10px 10px 10px;
}
.thumbnail-img {
  border-left: 2px solid red;
  width: 200px;
  height: 125px;
  padding: 0;
  background-size: cover;
  background-position: center;
}
.thumbnail-header {
  display: flex;
  flex-direction: row;
}
.thumbnail-innertext {
  padding: 10px;
}
.fancy {
  font-family: Georgia, 'Times New Roman', Times, serif;
  text-transform: capitalize;
}
.author {
  text-transform: uppercase;
}
.bio {
  display: flex;
  flex-direction: column;
  align-content: center;
  margin: 20px;
  background: white;
  border-radius: 20px;
  width: 300px;
}
.bio-img {
  border-radius: 20px 20px 0 0;
  height: 250px;
  width: 100%;
  background-size: cover;
  background-position: center;
}
.bio-text {
  padding: 10px;
}
.auth-thumb {
  display: flex;
  flex-direction: column;
  align-content: center;
  margin: 20px;
  background: white;
  border-radius: 20px;
  width: 300px;
}
.auth-thumb-img {
  border-radius: 20px 20px 0 0;
  height: 250px;
  width: 100%;
  background-size: cover;
  background-position: center;
}
.auth-thumb-text {
  padding: 10px;
}
.recipe-img {
  border-left: 2px solid red;
  width: 450px;
  height: 400px;
  padding: 0;
  background-size: cover;
  background-position: center;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.recipe-img-text {
  background: rgba(0,0,0,0.6);
  padding: 0 10px;
  text-align: left;
}
.recipe {
  width: 440px;
  padding: 10px;
  text-align: left;
}
.recipe-tab {
  display: inline-block;
  max-width: 50%;
  text-align: left;
  background: white;
  border-radius: 10px 10px 0 0; 
  margin: 10px 0 0 10px;
  padding: 10px 10px 0 10px;
}
.recipe-tab-text {
  margin: 0;
}
.recipe-text {
  background: white;
  margin: 0 10px;
  text-align: left;
  padding: 10px;
  border-radius: 0 10px 10px 10px;
}
.recipe-ingredients {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 0;
}
.recipe-ing {
  width: 140px;
  margin: 10px;
}
.recipe-steps {
  width: 550px;
  background: rgb(255, 255, 219);
  border-radius: 10px;
  margin: 0 0 0 70px;
  text-align: left;
}
.recipe-steps h3 {
  padding: 20px 20px 0 20px;
}
.recipe-steps li {
  display: block;
  padding: 10px;
}
.recipe-steps ul {
  padding-bottom: 20px;
}
.recipe-tags {
  background: white;
  padding: 20px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  border-radius: 10px;
  margin: 0 0 0 70px;
  width: 550px;
}
.recipe-tags h4 {
  margin: 0;
  width: 100%;
}
.recipe-tag {
  margin: 20px;
}

/*-------------------------FORMs-------------------------------------------*/

input {
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  font-size: 16px;
}

label {
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-size: 24px;
  font-weight: bolder;
}

.form-title {
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-size: 32px;
  font-weight: bolder;
  text-transform: uppercase;
  
}

.form-background {
  background-color: wheat;
  padding: 24px;
  margin-bottom: 20px;
  border: 2px solid blanchedalmond;
}

.form-button {

  background: blanchedAlmond;
  color: black;
  font-weight: bold;
  border-style: outset;
  border-color: bisque;
  height: 50px;
  width: 100px;
  font: Georgia, 'Times New Roman', Times, serif;
  text-shadow:none;
  padding: 8px;
  }
  @media only screen and (max-width: 500px) {
    .recipe, .recipe-img, .recipe-steps, .recipe-tags {
      margin: 10px 0;
      width: 100%;
    }
    .recipe-text {
      margin: 0;
      width: 100%;
    }
    .recipe-tab {
      margin-left: 0;
    }
    .recipe-ing {
      width: 110px;
    }
  }

